import { injectable } from '@angular/core';
import { Movie } from './../models/Movie';
import { TVshow } from './../models/TVshow';
import { Storage } from '@ionic/storage';


@Inejctable({
  providedIn: 'root'
})
export class StorageService {
  private readonly Movie: 'Movie';
  private readonly TVshow: 'TVshow';
  
}


constructor(public storage: Storage){}

public set(settingName, value){
  return this.storage.set(`setting:${settingName}`, value);
}

public aysnc get(settingName){
  return awiat this.storage.get(`setting:${settingName}`);
}

public async remove(settingName){
  return await this.storage.remove(`setting:${settingName});
}

//Absolutely don't use unless necessary
public clear(){
  this.storage.cleare().then(() => {
      console.log('all keys cleared');
  });
}

public createNewSettingNameTag(type: string, title: string, id: number){
    return "${type}-${title}-${id}";
}



  
